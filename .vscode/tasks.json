{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "tsc",
            "command": "tsc",
            "type": "shell",
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "webpack",
            "type": "shell",
            "command": "webpack --optimize-minimize",
            "args": [
                "==optimize-minimize",
                "-p"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}