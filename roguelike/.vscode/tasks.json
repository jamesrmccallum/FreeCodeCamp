{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "shell",
            "label": "Webpack Build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "webpack",
            "args": [
                "--optimize-minimize",
                "-p"
            ]
        }
    
    ],

}